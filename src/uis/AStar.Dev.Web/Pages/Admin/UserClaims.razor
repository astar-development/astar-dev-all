@using System.Security.Claims
@inherits UserClaimsBase
<AuthorizeView>
    <h4>
        @context.User.Identity!.Name has successfully signed-in
    </h4>
    <p>@AuthMessage</p>
    Claims from the ID token
    <table class="table">
        <thead>
        <tr>
            <th>Claim Type</th>
            <th>Value</th>
        </tr>
        </thead>
        <tbody>
        @foreach (Claim claim in Claims)
        {
            <tr>
                <td>@claim.Type</td>
                <td>@if (claim.Value.Length > 75)
                    {
                        var s = $"{claim.Value[..75]}...";
                        @s
                    }
                    else
                    {
                        @claim.Value
                    }
                </td>
            </tr>
        }
        </tbody>
    </table>
</AuthorizeView>
